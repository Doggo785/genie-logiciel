<Window x:Class="GestionDesProcessus.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestionnaire de Processus" Height="600" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Nouveau Processus :" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="Bold"/>
            <TextBox x:Name="txtProcessName" Width="200" Margin="0,0,10,0" Padding="2" Text="notepad.exe"/>
            <Button Content="Lancer Processus" Click="BtnLancer_Click" Padding="10,5" Background="Green"/>
        </StackPanel>

        <DataGrid x:Name="dgProcessus" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True" SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID (PID)" Binding="{Binding Id}" Width="80"/>
                <DataGridTextColumn Header="Nom" Binding="{Binding Name}" Width="200"/>
                <DataGridTextColumn Header="Priorité" Binding="{Binding Priority}" Width="100"/>
                <DataGridTextColumn Header="Mém. Virtuelle (o)" Binding="{Binding VirtualMemory}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Arrêter processus" Click="BtnArreter_Click" Margin="0,0,10,0" Padding="10,5" Background="#FFCCCC" Foreground="DarkRed" FontWeight="Bold"/>
            <Button Content="Quitter application" Click="BtnQuitter_Click" Padding="10,5"/>
        </StackPanel>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,10,0,0">
            <Button Content="Rafraîchir" Click="BtnRefresh_Click" Margin="0,0,0,0" Padding="10,5"/>
        </StackPanel>
    </Grid>
</Window>